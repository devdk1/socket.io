<% include header.ejs %>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="" id="signin_div">
      <h1><span class="fa fa-sign-in"></span> Login</h1>
      <form name="loginForm">
        <div class="form-group">
          <label>Username/Email:</label>
          <input name="u_email" type="text" class="form-control u_email" required>
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input name="password" type="password" class="form-control password" required>
        </div>
        <p style="color:red" class="help-block hidden"></p>
        <br>
        <button type="submit" class="btn btn-success btn-lg login_save">Login</button>
      </form>
      <p>Not a member? <span class="signup_btn pointer">Sign-up Here</span></p>
      <hr>
    </div>
    <div class="hidden" id="signup_div">
      <h1><span class="fa fa-sign-in"></span> Signup</h1>
      <form name="signupForm">
        <div class="form-group">
          <label>Full Name:</label>
          <input name="full_name" type="text" id="full_name" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Username:</label>
          <input name="username" type="text" id="username" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Email:</label>
          <input name="email" type="email" id="email" class="form-control" required>
        </div>
        <div class="form-group">
          <label>Password:</label>
          <input name="password" type="password" id="password" class="form-control" minlength="4" maxlength="10" required>
        </div>
        <p style="color:red" class="help-block hidden"></p>
        <br>
        <button type="submit" class="btn btn-success btn-lg signup_save">Signup</button>
      </form>
      <p>Already a member?<span class="signin_btn pointer">Sign-in Here</span></p>
      <hr>
    </div>
  </div>
</div>

<script>
  $(document).ready(() => {
    main_obj.signupController();
    main_obj.loginController();
  })
</script>
